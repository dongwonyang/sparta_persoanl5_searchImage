<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_searchImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_siteName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="sample"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/iv_searchImage"
            app:layout_constraintStart_toStartOf="@id/iv_searchImage"
            app:layout_constraintTop_toBottomOf="@id/iv_searchImage" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="sample_date"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/iv_searchImage"
            app:layout_constraintStart_toStartOf="@id/iv_searchImage"
            app:layout_constraintTop_toBottomOf="@id/tv_siteName" />

        <ImageView
            android:id="@+id/iv_bookmaker"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_bookmark_none"
            app:layout_constraintEnd_toEndOf="@id/iv_searchImage"
            app:layout_constraintTop_toTopOf="@id/iv_searchImage" />

</androidx.constraintlayout.widget.ConstraintLayout>