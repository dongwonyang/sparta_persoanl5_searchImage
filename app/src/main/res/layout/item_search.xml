<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintDimensionRatio="1"/>

    <TextView
        android:id="@+id/tv_siteName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sample"
        app:layout_constraintTop_toBottomOf="@id/iv_search"
        app:layout_constraintStart_toStartOf="@id/iv_search"
        app:layout_constraintEnd_toEndOf="@id/iv_search"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_dateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_siteName"
        app:layout_constraintStart_toStartOf="@id/iv_search"
        app:layout_constraintEnd_toEndOf="@id/iv_search"
        android:text="sample_date"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/iv_bookmarker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_search"
        app:layout_constraintEnd_toEndOf="@id/iv_search"
        android:layout_margin="10dp"
        android:src="@drawable/ic_bookmark_none"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>